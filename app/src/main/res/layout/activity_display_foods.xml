<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayFoodsActivity"
    android:background="#91da71"
    android:padding="12dp">


    <LinearLayout
        android:id="@+id/llayout2_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#03ba40"
        android:padding="7dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/total_cal_id"
            android:text="@string/total_calories"
            android:textSize="17sp"
            android:textColor="#efe7e7"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="|"
            android:layout_marginLeft="5dp"
            android:textColor="#6b55c2"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/total_items_id"
            android:paddingLeft="5dp"
            android:text="@string/total_foods"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/food_listview_id"
        android:layout_below="@+id/llayout2_id"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="#dd939090"
        android:dividerHeight="2dp"></ListView>


</RelativeLayout>
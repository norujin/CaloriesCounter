<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#91da71"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_title_id"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/app_title"
        android:textColor="#dd636466"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/app_icon_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/pear_icon_2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_title_id"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/llayout_id"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/row_bg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/app_icon_id"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/food_name_id"
            android:hint="@string/food_hint"
            android:layout_marginTop="10dp"
            android:padding="14dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/food_cal_id"
            android:hint="@string/food_cal"
            android:layout_marginTop="5dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/submit_btn_id"
            android:layout_marginTop="20dp"
            android:text="@string/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>